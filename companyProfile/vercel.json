{
    "version":2,
    "builds": [
        {
        "src": "companyProfile/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": { 
            "distDir": "staticfiles_build"
            }
        }
    ],
    "env": {
    "PYTHON_VERSION": "3.9",  
    "BUILD_PACK": "heroku/python"
  },
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "companyProfile/wsgi.py"
        }
    ]
}